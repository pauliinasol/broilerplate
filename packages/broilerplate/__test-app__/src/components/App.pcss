:global {

  @import "../../../node_modules/normalize.css/normalize.css";

  html {
    font-family: "Comic Sans MS";
    font-size: 14px;

    @media(min-width: 800px) {
      font-size: 18px;
    }

    background-image: linear-gradient(45deg, rgba(255, 255, 255, .8), rgba(255, 255, 255, .9)),
      url("../assets/money.jpg");

    background-repeat: repeat;

  }

  body {
    padding: 2em;
  }

}
